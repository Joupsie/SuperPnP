 <div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Rent my superpower</h3>
        <%= simple_form_for @superpower do |f| %>
          <%= f.input :name %>
          <%= f.input :description %>
          <%= f.input :price %>
          <%= f.submit class: 'btn btn-secondary' ,method: :create %>
        <% end %>
      </div>
    </div>
  </div>
</div>
