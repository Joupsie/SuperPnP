
<h1><strong>The superpower I want to shared</strong></h1>

 <div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Create a new superpower</h3>
        <%= simple_form_for @superpower do |f| %>
          <%= f.input :photos, as: :file, input_html: { multiple: true } %>
          <%= f.input :name %>
          <%= f.input :description %>
          <%= f.input :price %>
          <%= f.submit class: 'btn btn-flat' ,method: :create %>
        <% end %>
         <%= link_to "Back to home page", superpowers_path %>
      </div>
    </div>
  </div>
</div>

<%= render "form", superpower: @superpower %>

